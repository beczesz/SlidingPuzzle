<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/high_score_item_number"
        style="@style/HiScoreRowIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/high_score_label1_margin"
        tools:text="#1"
        />

    <TextView
        android:id="@+id/high_score_3x3_value"
        style="@style/HiScoreRowValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/high_score_label2_margin"
        tools:text="14 s"/>

    <TextView
        android:id="@+id/high_score_4x4_value"
        style="@style/HiScoreRowValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/high_score_label3_margin"
        tools:text="15 s"/>

</RelativeLayout>
